@model EF_MVC.Models.Sttafy.Entite

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Entite</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Directeur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Directeur.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Poles)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Départment</th>
                    <th>Manager</th>
                </tr>
                @foreach (var item in Model.Poles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manager.FullName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
